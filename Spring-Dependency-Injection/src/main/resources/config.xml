<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--using namespace-->
    <bean id="stud1" class="com.subham.primitive.Student" p:id="101" p:name="subham" p:address="Odisha"> </bean>
    <!--using self closing tag-->
    <bean id="stud2" class="com.subham.primitive.Student">
        <property name="id" value="102"/>
        <property name="name" value="dash"/>
        <property name="address" value="Jharkhand"/>
    </bean>
</beans>