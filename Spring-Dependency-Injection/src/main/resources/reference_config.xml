<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="collection_config.xml"/>
    <import resource="primitive_config.xml"/>

    <!--subject-->
    <bean id="sub1" class="com.subham.reference.Subject">
        <property name="name" value="MCA"/>
    </bean>
    <bean id="sub2" class="com.subham.reference.Subject">
        <property name="name" value="MBA"/>
    </bean>
    <bean id="sub3" class="com.subham.reference.Subject">
        <property name="name" value="BTech"/>
    </bean>
    <bean id="sub4" class="com.subham.reference.Subject">
        <property name="name" value="Diploma"/>
    </bean>
    <bean id="sub5" class="com.subham.reference.Subject">
        <property name="name" value="ITI"/>
    </bean>

    <!--address-->
    <bean id="address1" class="com.subham.reference.Address">
        <property name="city" value="Bhubaneswar"/>
        <property name="subjects">
            <list>
                <ref bean="sub1"/>
                <ref bean="sub2"/>
                <ref bean="sub3"/>
            </list>
        </property>
        <property name="teacherList">
            <list>
                <ref bean="tech1"/>
                <ref bean="tech2"/>
            </list>
        </property>
        <property name="studentList">
            <list>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud2"/>
            </list>
        </property>
    </bean>
    <bean id="address2" class="com.subham.reference.Address">
        <property name="city" value="Cuttack"/>
        <property name="subjects">
            <list>
                <ref bean="sub3"/>
                <ref bean="sub4"/>
                <ref bean="sub5"/>
            </list>
        </property>
        <property name="teacherList">
            <list>
                <ref bean="tech2"/>
                <ref bean="tech1"/>
            </list>
        </property>
        <property name="studentList">
            <list>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud1"/>
                <ref bean="stud2"/>
                <ref bean="stud2"/>
                <ref bean="stud2"/>
                <ref bean="stud2"/>
                <ref bean="stud2"/>
                <ref bean="stud2"/>
            </list>
        </property>
    </bean>

    <!--    university-->
    <bean id="un1" class="com.subham.reference.University">
        <property name="name" value="Utkal University"/>
        <property name="address" ref="address1"/>
    </bean>
    <bean id="un2" class="com.subham.reference.University">
        <property name="name" value="RM University"/>
        <property name="address" ref="address2"/>
    </bean>
</beans>